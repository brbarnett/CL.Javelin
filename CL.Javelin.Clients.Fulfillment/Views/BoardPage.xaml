<shared:NavigationAwarePage
    x:Class="CL.Javelin.Clients.Fulfillment.Views.BoardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prismMvvm="using:Prism.Windows.Mvvm"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:shared="using:CL.Javelin.Clients.Shared.Views"
    x:Uid="Page"
    x:Name="pageRoot"
    IsTabStop="false"
    prismMvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <shared:NavigationAwarePage.Resources>
        <ResourceDictionary Source="ms-appx:///CL.Javelin.Clients.Shared/Resources/ClientResources.xaml" />
    </shared:NavigationAwarePage.Resources>
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="200"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="175"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="1" Source="{StaticResource CoyoteLogoFulfillment}" Height="50" Width="50"></Image>
            <TextBlock Grid.Column="2" Text="Javelin Fulfillment" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"></TextBlock>
        </Grid>

        <ListView 
            Grid.Row="1" 
            x:Name="BoardListView"
            ItemsSource="{Binding Requests}"
            SelectedItem="{Binding SelectedRequest, Mode=TwoWay}"
            ItemContainerStyleSelector="{StaticResource BoardListViewItemStyleSelector}"
            ItemTemplate="{StaticResource BoardListViewItemTemplate}"
            >
            <interactivity:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="SelectionChanged">
                    <core:InvokeCommandAction Command="{Binding ChangeSelectedRequestCommand}" CommandParameter="{Binding ElementName=BoardListView, Path=SelectedItem}" />
                </core:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
        </ListView>

        <Grid Grid.Row="2"
              DataContext="{Binding SelectedRequest}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Padding="20 5">
                        <TextBlock Text="Customer:" />
                        <TextBox Text="{Binding Customer, Mode=TwoWay}" HorizontalAlignment="Stretch" />
                    </StackPanel>
                    <StackPanel Grid.Row="1" Padding="20 5">
                        <TextBlock Text="Origin:" />
                        <ComboBox 
                            PlaceholderText="Please choose a city" 
                            ItemsSource="{StaticResource LocationsList}"
                            SelectedItem="{Binding Origin, Mode=TwoWay}"
                            Style="{StaticResource ComboBoxViewModelStyle}" />
                    </StackPanel>
                    <StackPanel Grid.Row="2" Padding="20 5">
                        <TextBlock Text="Destination:" />
                        <ComboBox 
                            PlaceholderText="Please choose a city" 
                            ItemsSource="{StaticResource LocationsList}"
                            SelectedItem="{Binding Destination, Mode=TwoWay}"
                            Style="{StaticResource ComboBoxViewModelStyle}" />
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Padding="20 5">
                        <TextBlock Text="Deadline:" />
                        <CalendarDatePicker 
                            DisplayMode="Month"
                            IsTodayHighlighted="True"
                            MinDate="{Binding Today, Mode=OneWay, Converter={StaticResource DateTimeToDateTimeOffsetConverter}}"
                            Date="{Binding Deadline, Mode=TwoWay, Converter={StaticResource DateTimeToDateTimeOffsetConverter}}"
                            HorizontalAlignment="Stretch" />
                    </StackPanel>
                    <StackPanel Grid.Row="1" Padding="20 5">
                        <TextBlock Text="Open:" />
                        <ToggleSwitch 
                            OnContent="Open" 
                            OffContent="Closed" 
                            IsOn="{Binding Open, Mode=TwoWay}"/>
                    </StackPanel>
                </Grid>

            </Grid>

            <StackPanel 
                Grid.Column="2">
                <Button Content="Toggle Fulfilled" Command="{Binding ToggleSelectedRequestOpenCommand}" HorizontalAlignment="Stretch" Margin="10" />
                <Button Content="Delete" Command="{Binding DeleteSelectedRequestCommand}" HorizontalAlignment="Stretch" Margin="10" />
            </StackPanel>
        </Grid>
    </Grid>
</shared:NavigationAwarePage>



