<local:NavigationAwarePage
    x:Class="CL.Javelin.Fulfillment.Client.Views.BoardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CL.Javelin.Fulfillment.Client.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    x:Uid="Page"
    x:Name="pageRoot"
    IsTabStop="false"
    xmlns:designViewModels="using:CL.Javelin.Fulfillment.Client.DesignViewModels"
    d:DataContext="{d:DesignInstance designViewModels:BoardPageDesignViewModel, IsDesignTimeCreatable=True}" mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock>Hello world</TextBlock>

        <ListView ItemsSource="{Binding Requests}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <Run Text="Destination:"></Run>
                        <Run Text="{Binding Destination}"></Run>
                    </TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</local:NavigationAwarePage>

